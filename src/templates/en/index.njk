            </li>
        </ul>
    </section>
    <script>
        (function() {
            const span = document.querySelector(".content .poster h3 span");
            const colors = ["cyan", "purple", "orange", "red", "dark-red", "teal", "blue", "burgundy", "snow", "green"];
            const titles = [
                "Typescript developer",
                "Angular developer",
                "Vue.js developer",
                "Node.js developer",
                "Redux developer",
                "async developer",
                "template developer",
                "Express/HAPI developer",
                "REST developer",
                "API developer",
                "mobile developer",
                "Cordova developer",
                "PHP developer",
                "Laravel developer",
                "iOS developer",
                "Objective-C developer",
                "Swift developer",
                "web developer",
                "Docker developer",
                "frontend developer",
                "backend developer",
                "MySQL developer",
                "Postgres developer",
                "database developer"
            ];
            const changeTitle = function() {
                let newColor = null;
                while (!newColor) {
                    newColor = colors[Math.min(colors.length - 1, Math.floor(Math.random() * colors.length))];
                    if (newColor === span.className) {
                        newColor = null;
                    }
                }
                let newText = null;
                while (!newText) {
                    newText = titles[Math.min(titles.length - 1, Math.floor(Math.random() * titles.length))];
                    if (newText === span.innerText) {
                        newText = null;
                    }
                }
                let promise = Promise.resolve();
                for (let i = span.innerText.length - 1; i >= 0; i--) {
                    promise = promise.then(() => {
                        span.innerText = span.innerText.substr(0, span.innerText.length - 1);
                        return new Promise((resolve) => { setTimeout(resolve, 30); });
                    });
                }
                promise = promise.then(() => {
                    span.className = newColor;
                });
                for (let i = 0; i < newText.length; i++) {
                    promise = promise.then(() => {
                        span.innerText = newText.substr(0, span.innerText.length + 1);
                        return new Promise((resolve) => { setTimeout(resolve, 30); });
                    });
                }
                promise.then(() => {
                    setTimeout(changeTitle, 3000);
                });
            };
            setTimeout(changeTitle, 3000);
        })();
    </script>
</div>
{% endblock %}

